<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorButton"
    tools:context="com.android.vignan.artistapp.UI.MusicActivityFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Songs"
        android:id="@+id/textView"
        android:layout_gravity="center" />

    <RadioGroup
        android:id="@+id/songsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song1"
            android:id="@+id/song1Button"
            android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song2"
            android:id="@+id/song2Button" />

    </RadioGroup>

    <Button android:id="@+id/startSongButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_marginTop="10dp"
        />
    <Button android:id="@+id/stopSongButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Stop"
        android:layout_marginTop="10dp"
        />

</LinearLayout>